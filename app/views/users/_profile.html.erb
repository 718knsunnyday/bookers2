<% user = current_user if user.nil? %>
  <%= attachment_image_tag(user, :profile_image, size: "63x63", fallback: "no_image.jpeg") %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<div class="row">
   <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
   <i class="fas fa-user-cog"></i>
   <% end %>
</div>