<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>


         <%= @user.name %>
         <%= @user.introduction %>
         <div class="row">
         <% if @user.id == current_user.id %>
           <%= link_to "fas fa-user-cog", edit_users_path(@user), class: "btn btn-outline-secondary btn-block" %>
         </div>

       <h2 class="mt-3">New book</h2>

      <%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create book' %>

	</div>
  </div>
</div>
