<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
	    <h2>User info</h2>
		   <%= render 'users/profile', user: @user %>
       <h2>New book</h2>
		   <%= render 'books/form', book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>

            <td><%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %>
              <nav>
                <%= @book.user.name %>
              </nav>
            </td>
                <% end %>
            <td><%= link_to(book_path(@book)) do %>
                <%= @book.title %>
                <% end %>
            </td>
　　　　      <td><%= @book.body %></td>

              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </tr>
          </body>
        </table>
    </div>
  </div>
</div>

