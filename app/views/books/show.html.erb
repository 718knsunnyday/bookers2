<div class="container px-5 px-sm-0">
  <div class="row">
<p><%= flash[:success] %></p>

  <%= render 'books/list', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
                  <%= link_to @user.name, users_path %>
                  </td>
              <td><%= link_to @books.title %></td>
              <td><%= @books.body %></td>
              <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            </tr>
          </body>
        </table>
    </div>

  </div>
</div>
